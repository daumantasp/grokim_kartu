        <item name="auth_title_color">@color/white</item>
        <item name="auth_text_color">@color/champagne_pink</item>
        <item name="auth_text_secondary_color">@color/white</item>
        <item name="auth_primary_button_color">@color/cadet_blue</item>
        <item name="auth_primary_button_pressed_color">@color/cadet</item>
        <item name="auth_primary_button_title_color">@color/white</item>

        <item name="background_color">@color/white</item>
        <item name="spinner_color">@color/white</item>
        <item name="last_item_spinner_color">@color/chambray</item>
        <item name="swipe_to_refresh_progress_spinner_color">@color/chambray</item>
        <item name="border_color">@color/grey</item>
        <item name="main_status_bar_color">@color/white</item>
        <item name="disabled_color">@color/grey</item>
        <item name="warning_color">@color/cherry_red</item>
        <item name="title_color">@color/black</item>
        <item name="text_color">@color/dark_grey</item>
        <item name="text_secondary_color">@color/black</item>

        <item name="bottom_dialog_background_color">@color/black_50</item>
        <item name="bottom_dialog_color">@color/white</item>
        <item name="bottom_dialog_title_color">@color/black</item>
        <item name="bottom_dialog_value_color">@color/dark_grey</item>
        <item name="bottom_dialog_separator_color">@color/chambray</item>
        <item name="bottom_dialog_text_input_background_color">@color/light_grey</item>
        <item name="bottom_dialog_text_input_hint_color">@color/chambray</item>

        <item name="primary_button_color">@color/chambray</item>
        <item name="primary_button_pressed_color">@color/violet</item>
        <item name="primary_button_ripple_color">@color/white</item>
        <item name="primary_button_title_color">@color/white</item>

        <item name="secondary_button_color">@color/white</item>
        <item name="secondary_button_border_color">@color/light_grey</item>
        <item name="secondary_button_pressed_color">@color/cadet_blue</item>
        <item name="secondary_button_ripple_color">@color/white</item>
        <item name="secondary_button_title_color">@color/chambray</item>

        <item name="primary_text_input_background_color">@color/white</item>
        <item name="primary_text_input_hint_color">@color/cherry_red</item>
        <item name="primary_text_input_box_stroke_color">@color/cherry_red</item>

        <item name="secondary_text_input_background_color">@color/light_grey</item>
        <item name="secondary_text_input_hint_color">@color/chambray</item>
        <item name="secondary_text_input_box_stroke_color">@color/chambray</item>

        <item name="bottom_menu_background_color">@color/white</item>
        <item name="bottom_menu_active_color">@color/chambray</item>
        <item name="bottom_menu_inactive_color">@color/grey</item>

        <item name="header_background_color">@color/white</item>
        <item name="header_icon_color">@color/black</item>

        <item name="notifications_counter_background_color">@color/cherry_red</item>
        <item name="notifications_counter_value_color">@color/white</item>

        <item name="card_1_start_color">@color/chambray</item>
        <item name="card_1_end_color">@color/violet</item>
        <item name="card_2_start_color">@color/cambridge_blue</item>
        <item name="card_2_end_color">@color/cadet_blue</item>

        <item name="initials_text_color">@color/white</item>
        <item name="initials_background_color_1">#00AA55</item>
        <item name="initials_background_color_2">#009FD4</item>
        <item name="initials_background_color_3">#B381B3</item>
        <item name="initials_background_color_4">#939393</item>
        <item name="initials_background_color_5">#E3BC00</item>
        <item name="initials_background_color_6">#D47500</item>
        <item name="initials_background_color_7">#DC2A2A</item>

        <item name="photo_placeholder_color">@color/grey</item>
        <item name="select_photo_icon_background_color">@color/chambray</item>
        <item name="select_photo_icon_color">@color/white</item>

        <item name="locked_icon_background_color">@color/cherry_red</item>
        <item name="unlocked_icon_background_color">@color/cadet_blue</item>
        <item name="lock_icon_color">@color/white</item>

        <item name="my_message_bubble_background_color">@color/light_grey</item>
        <item name="my_message_bubble_stroke_color">@color/grey</item>
        <item name="my_message_bubble_text_color">@color/black</item>
        <item name="my_message_bubble_name_color">@color/black</item>
        <item name="my_message_bubble_date_color">@color/dark_grey</item>

        <item name="friend_message_bubble_background_color">@color/white</item>
        <item name="friend_message_bubble_stroke_color">@color/grey</item>
        <item name="friend_message_bubble_text_color">@color/black</item>
        <item name="friend_message_bubble_name_color">@color/black</item>
        <item name="friend_message_bubble_date_color">@color/dark_grey</item>

        <item name="post_message_container_background_color">@color/white</item>
        <item name="post_message_input_background_color">@color/white</item>
        <item name="post_message_input_stroke_color">@color/grey</item>
        <item name="post_message_icon_inactive_color">@color/chambray</item>
        <item name="post_message_icon_active_color">@color/violet</item>

        <item name="unread_notification_background_color">@color/sky_blue</item>
        <item name="unread_notification_title_color">@color/black</item>
        <item name="unread_notification_text_color">@color/black_50</item>
        <item name="unread_notification_date_color">@color/chambray</item>

        <item name="inactive_notification_background_color">@color/light_grey</item>
        <item name="inactive_notification_title_color">@color/black_50</item>
        <item name="inactive_notification_text_color">@color/black_50</item>
        <item name="inactive_notification_date_color">@color/black_50</item>

        <item name="active_notification_background_color">@color/white</item>
        <item name="active_notification_title_color">@color/black</item>
        <item name="active_notification_text_color">@color/black</item>
        <item name="active_notification_date_color">@color/chambray</item>

        <item name="attentioner_background_color">@color/cherry_red</item>
    </style>

    <style name="auth_title">
        <item name="android:textColor">?attr/auth_title_color</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="auth_text">
        <item name="android:textColor">?attr/auth_text_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="auth_text_secondary">
        <item name="android:textColor">?attr/auth_text_secondary_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="main_text_secondary">
        <item name="android:textColor">?attr/text_secondary_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="auth_text_input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/primary_text_input_background_color</item>
        <item name="android:textColorHint">?attr/primary_text_input_hint_color</item>
        <item name="hintTextColor">?attr/primary_text_input_hint_color</item>
        <item name="boxStrokeColor">?attr/primary_text_input_box_stroke_color</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

    <style name="main_text_input" parent="auth_text_input">
        <item name="boxBackgroundColor">?attr/secondary_text_input_background_color</item>
        <item name="android:textColorHint">?attr/secondary_text_input_hint_color</item>
        <item name="hintTextColor">?attr/secondary_text_input_hint_color</item>
        <item name="boxStrokeColor">?attr/secondary_text_input_box_stroke_color</item>
    </style>

    <style name="primary_button">
        <item name="android:background">@drawable/primary_in_auth_button_ripple</item>
        <item name="android:textColor">?attr/auth_primary_button_title_color</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:width">250dp</item>
        <item name="android:height">30dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="header_title">
        <item name="android:textColor">?attr/title_color</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_right_text" parent="header_title">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="notification_title">
        <item name="android:textColor">?attr/inactive_notification_title_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="notification_text">
        <item name="android:textColor">?attr/inactive_notification_text_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="notification_date">
        <item name="android:textColor">?attr/inactive_notification_date_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="active_notification_title" parent="notification_title">
        <item name="android:textColor">?attr/active_notification_title_color</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="active_notification_date" parent="notification_date">
        <item name="android:textColor">?attr/active_notification_date_color</item>
    </style>

    <style name="active_notification_text">
        <item name="android:textColor">?attr/active_notification_text_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="unread_notifications_count">
        <item name="android:textColor">?attr/notifications_counter_value_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_text_input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/bottom_dialog_text_input_background_color</item>
        <item name="android:textColorHint">?attr/bottom_dialog_text_input_hint_color</item>
        <item name="hintTextColor">?attr/bottom_dialog_text_input_hint_color</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="bottom_dialog_title">
        <item name="android:textColor">?attr/bottom_dialog_title_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bottom_dialog_value">
        <item name="android:textColor">?attr/bottom_dialog_value_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="card_title" parent="auth_title">
        <item name="android:textColor">?attr/auth_title_color</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_text">
        <item name="android:textColor">?attr/auth_text_secondary_color</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="date_picker">
        <item name="colorControlNormal">?attr/bottom_dialog_separator_color</item>
    </style>

    <style name="input_counter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>

