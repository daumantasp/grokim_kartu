<resources>
    <style name="SecondaryLightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        Status bar-->
        <item name="colorPrimaryDark">@color/violet</item>
        <item name="StatusBarMainColor">@color/white</item>
<!--        Menu icon color-->
        <item name="android:textColorPrimary">@color/violet</item>

        <item name="loginBackgroundStartColor">@color/violet</item>
        <item name="loginBackgroundEndColor">@color/violetBlue</item>

        <item name="spinnerInLoginColor">@color/white</item>
        <item name="iconInAuthColor">@color/white</item>
        <item name="disabledColor">@color/grey</item>

<!--        refactor texts-->
        <item name="titleColor">@color/white</item>
        <item name="titleSecondaryColor">@color/black</item>
        <item name="textColor">@color/champagnePink</item>
        <item name="textSecondaryColor">@color/white</item>
        <item name="textThirdlyColor">@color/darkGrey</item>
        <item name="textForthColor">@color/black</item>

        <item name="primaryInAuthButtonColor">@color/cadetBlue</item>
        <item name="primaryInAuthButtonPressedColor">@color/cadet</item>
        <item name="primaryInAuthButtonTextColor">@color/white</item>

        <item name="primaryButtonColor">@color/violetBlue</item>
        <item name="primaryButtonPressedColor">@color/violet</item>
        <item name="primaryButtonTextColor">@color/white</item>

        <item name="secondaryButtonColor">@color/white</item>
        <item name="secondaryButtonBorderColor">@color/lightGrey</item>
        <item name="secondaryButtonPressedColor">@color/cadetBlue</item>
        <item name="secondaryButtonTextColor">@color/violetBlue</item>

        <item name="primaryTextInputBackgroundColor">@color/white</item>
        <item name="primaryTextInputHintColor">@color/cherryRed</item>
        <item name="primaryTextInputBoxStrokeColor">@color/cherryRed</item>

        <item name="secondaryTextInputBackgroundColor">@color/lightGrey</item>
        <item name="secondaryTextInputHintColor">@color/violetBlue</item>
        <item name="secondaryTextInputBoxStrokeColor">@color/violetBlue</item>

        <item name="selectPhotoButtonBackgroundColor">@color/violetBlue</item>
        <item name="selectPhotoButtonIconColor">@color/white</item>

        <item name="bottomMenuBackgroundColor">@color/white</item>
        <item name="bottomMenuActiveColor">@color/violetBlue</item>
        <item name="bottomMenuInactiveColor">@color/grey</item>

        <item name="borderColor">@color/grey</item>
        <item name="playerItemBackgroundColor">@color/white</item>
        <item name="playerItemPhotoBackgroundColor">@color/grey</item>
        <item name="spinnerInMainColor">@color/white</item>
        <item name="playerItemNameColor">@color/black</item>

        <item name="thomannItemBackgroundColor">@color/white</item>

        <item name="initialsTextColor">@color/white</item>
        <item name="initialsBackgroundColor1">#00AA55</item>
        <item name="initialsBackgroundColor2">#009FD4</item>
        <item name="initialsBackgroundColor3">#B381B3</item>
        <item name="initialsBackgroundColor4">#939393</item>
        <item name="initialsBackgroundColor5">#E3BC00</item>
        <item name="initialsBackgroundColor6">#D47500</item>
        <item name="initialsBackgroundColor7">#DC2A2A</item>

        <item name="headerBackgroundColor">@color/white</item>
        <item name="iconInHeaderColor">@color/black</item>

        <item name="rowBackgroundColor">@color/white</item>

        <item name="bottomDialogBackgroundColor">@color/black50</item>
        <item name="bottomDialogColor">@color/white</item>
        <item name="bottomDialogTitleColor">@color/black</item>
        <item name="bottomDialogValueColor">@color/darkGrey</item>

        <item name="card1StartColor">@color/violetBlue</item>
        <item name="card1EndColor">@color/violet</item>
        <item name="card2StartColor">@color/cambridgeBlue</item>
        <item name="card2EndColor">@color/cadetBlue</item>

        <item name="datePickerDividerColor">@color/violetBlue</item>

        <item name="lockedIconBackgroundColor">@color/cherryRed</item>
        <item name="unlockedIconBackgroundColor">@color/cadetBlue</item>
        <item name="lockedIconColor">@color/white</item>
    </style>
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        Status bar-->
        <item name="colorPrimaryDark">@color/yellow</item>

        <item name="loginBackgroundStartColor">@color/yellow</item>
        <item name="loginBackgroundEndColor">@color/beige</item>

        <item name="spinnerInLoginColor">@color/white</item>
        <item name="iconInAuthColor">@color/white</item>
        <item name="disabledColor">@color/grey</item>

        <item name="titleColor">@color/white</item>
        <item name="textColor">@color/brown</item>
        <item name="textSecondaryColor">@color/white</item>

        <item name="primaryInAuthButtonColor">@color/appleGreen</item>
        <item name="primaryInAuthButtonPressedColor">@color/budGreen</item>
        <item name="primaryInAuthButtonTextColor">@color/white</item>

        <item name="primaryTextInputBackgroundColor">@color/white</item>
        <item name="primaryTextInputHintColor">@color/brown</item>
        <item name="primaryTextInputBoxStrokeColor">@color/brown</item>
    </style>

    <style name="Title">
        <item name="android:textColor">?attr/titleColor</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">?attr/textSecondaryColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextThirdly">
        <item name="android:textColor">?attr/textThirdlyColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextForthly">
        <item name="android:textColor">?attr/textForthColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerItemTitle">
        <item name="android:textColor">?attr/playerItemNameColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/primary_in_auth_button_ripple</item>
        <item name="android:textColor">?attr/primaryInAuthButtonTextColor</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:width">250dp</item>
        <item name="android:height">30dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PrimaryTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/primaryTextInputBackgroundColor</item>
        <item name="android:textColorHint">?attr/primaryTextInputHintColor</item>
        <item name="hintTextColor">?attr/primaryTextInputHintColor</item>
        <item name="boxStrokeColor">?attr/primaryTextInputBoxStrokeColor</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

    <style name="SecondaryTextInput" parent="PrimaryTextInput">
        <item name="boxBackgroundColor">?attr/secondaryTextInputBackgroundColor</item>
        <item name="android:textColorHint">?attr/secondaryTextInputHintColor</item>
        <item name="hintTextColor">?attr/secondaryTextInputHintColor</item>
        <item name="boxStrokeColor">?attr/secondaryTextInputBoxStrokeColor</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textColor">?attr/titleSecondaryColor</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderRightText" parent="HeaderTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="BottomDialogTitle">
        <item name="android:textColor">?attr/bottomDialogTitleColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomDialogValue">
        <item name="android:textColor">?attr/bottomDialogValueColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="CardTitle" parent="Title">
        <item name="android:textColor">?attr/titleColor</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CardText">
        <item name="android:textColor">?attr/textSecondaryColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DatePicker">
        <item name="colorControlNormal">?attr/datePickerDividerColor</item>
    </style>
</resources>