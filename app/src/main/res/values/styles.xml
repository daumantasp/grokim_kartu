<resources>
    <style name="SecondaryLightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        Status bar-->
        <item name="colorPrimaryDark">@color/violet</item>
<!--        Menu icon color-->
        <item name="android:textColorPrimary">@color/violet</item>

        <item name="loginBackgroundStartColor">@color/violet</item>
        <item name="loginBackgroundEndColor">@color/violetBlue</item>

        <item name="spinnerInnerColor">@color/white</item>
        <item name="iconInAuthColor">@color/white</item>
        <item name="disabledColor">@color/lightGrey</item>

        <item name="titleColor">@color/white</item>
        <item name="textColor">@color/champagnePink</item>
        <item name="textSecondaryColor">@color/white</item>
        <item name="textThirdlyColor">@android:color/darker_gray</item>

        <item name="primaryButtonColor">@color/cadetBlue</item>
        <item name="primaryButtonPressedColor">@color/cadet</item>
        <item name="primaryButtonText">@color/white</item>

        <item name="textInputBackgroundColor">@color/white</item>
        <item name="textInputHintColor">@color/cherryRed</item>
        <item name="textInputBoxStrokeColor">@color/cherryRed</item>

        <item name="bottomMenuBackgroundColor">@color/white</item>
        <item name="bottomMenuActiveColor">@color/violetBlue</item>
        <item name="bottomMenuInactiveColor">@color/lightGrey</item>

        <item name="borderColor">@color/lightGrey</item>
        <item name="playerItemBackground">@color/white</item>
        <item name="playerItemName">@color/black</item>
    </style>
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        Status bar-->
        <item name="colorPrimaryDark">@color/yellow</item>

        <item name="loginBackgroundStartColor">@color/yellow</item>
        <item name="loginBackgroundEndColor">@color/beige</item>

        <item name="spinnerInnerColor">@color/white</item>
        <item name="iconInAuthColor">@color/white</item>
        <item name="disabledColor">@color/lightGrey</item>

        <item name="titleColor">@color/white</item>
        <item name="textColor">@color/brown</item>
        <item name="textSecondaryColor">@color/white</item>

        <item name="primaryButtonColor">@color/appleGreen</item>
        <item name="primaryButtonPressedColor">@color/budGreen</item>
        <item name="primaryButtonText">@color/white</item>

        <item name="textInputBackgroundColor">@color/white</item>
        <item name="textInputHintColor">@color/brown</item>
        <item name="textInputBoxStrokeColor">@color/brown</item>
    </style>

    <style name="Title">
        <item name="android:textColor">?attr/titleColor</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">?attr/textSecondaryColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextThirdly">
        <item name="android:textColor">?attr/textThirdlyColor</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerItemTitle">
        <item name="android:textColor">?attr/playerItemName</item>
        <item name="android:fontFamily">"@font/lato"</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/primary_button_ripple</item>
        <item name="android:textColor">?attr/primaryButtonText</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:width">250dp</item>
        <item name="android:height">30dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PrimaryTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/textInputBackgroundColor</item>
        <item name="android:textColorHint">?attr/textInputHintColor</item>
        <item name="hintTextColor">?attr/textInputHintColor</item>
        <item name="boxStrokeColor">?attr/textInputBoxStrokeColor</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

<!--    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">-->
