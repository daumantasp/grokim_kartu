<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.main.SettingsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.SettingsFragment">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/lato"
            android:textSize="32sp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:text="@string/settings_fragment" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextInput"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="@string/settings_email"
                        android:singleLine="true"
                        android:text="@{model.settingsForm.email}"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordTextInput"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.settingsForm.password}"
                        android:hint="@string/profile_delete_user_password"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/deleteUserButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"
                    android:text="@string/profile_delete_user_button"
                    android:enabled="@{model.settingsForm.passwordValid}"
                    android:onClick="@{() -> model.deleteUser()}"/>

                <Button
                    android:id="@+id/changePasswordButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_change_password_button"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:onClick="@{() -> model.changePassword()}"/>

                <Switch
                    android:id="@+id/showMeSwitch"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Rodyti mane sąraše"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"
                    android:checked="@={model.settingsForm.visible}"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/saveChangesButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"
                    android:text="@string/settings_saveChanges_button"
                    android:enabled="@{model.settingsForm.changed}"
                    android:onClick="@{() -> model.saveChanges()}"/>

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/lato"
                    android:onClick="@{() -> model.logoutClicked()}"
                    android:text="@string/profile_logout" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>