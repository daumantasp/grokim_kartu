<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/main_background_with_bottom_border"
    android:id="@+id/thomann_details_user_item_layout">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp">

        <com.dauma.grokimkartu.ui.viewelements.InitialsViewElement
            android:id="@+id/initials_view_element"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:initials_type="oval"
            app:text_size="10dp"/>

        <ImageView
            android:id="@+id/user_icon_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name"
                style="@style/main_text_secondary"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/leave_text_view"
                style="@style/main_text_secondary"
                android:textSize="18sp"
                android:textColor="?attr/warning_color"
                android:text="@string/thomann_details_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/user_amount"
            style="@style/main_text"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_joined_date"
            style="@style/main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</LinearLayout>