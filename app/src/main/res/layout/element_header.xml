<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="?attr/headerBackgroundColor">

        <TextView
            android:id="@+id/headerTitleTextView"
            style="@style/HeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/userRelativeLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            tools:text="Header Title" />

        <RelativeLayout
            android:id="@+id/userRelativeLayout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.dauma.grokimkartu.ui.viewelements.InitialsViewElement
                android:id="@+id/initialsViewElement"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:textSize="12dp" />

            <ImageView
                android:id="@+id/userIconImageView"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <com.dauma.grokimkartu.ui.viewelements.SpinnerViewElement
                android:id="@+id/spinnerViewElement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"
                app:unitDimensions="7dp"
                app:color="?attr/spinnerInMainColor"/>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>