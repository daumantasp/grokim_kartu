<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="?attr/header_background_color">

        <ImageButton
            android:id="@+id/back_image_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/left_arrow"
            android:backgroundTint="?attr/header_icon_color"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/header_title_text_view"
            style="@style/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/notifications_relative_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            tools:text="Header Title" />

        <RelativeLayout
            android:id="@+id/notifications_relative_layout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/user_relative_layout"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/notifications_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/ic_notifications"
                app:tint="?attr/header_icon_color" />

            <FrameLayout
                android:id="@+id/notifications_frame_layout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/oval_background"
                android:backgroundTint="?attr/notifications_counter_background_color"
                android:visibility="gone">

                <TextView
                    android:id="@+id/unread_notifications_count_text_view"
                    style="@style/unread_notifications_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_relative_layout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.dauma.grokimkartu.ui.viewelements.InitialsViewElement
                android:id="@+id/initials_view_element"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:initials_type="oval"
                app:text_size="7dp" />

            <ImageView
                android:id="@+id/user_icon_image_view"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/right_text_view"
            style="@style/header_right_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            tools:text="Right" />

        <ImageView
            android:id="@+id/right_text_attentioner_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/oval_background"
            android:backgroundTint="?attr/attentioner_background_color"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/right_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>