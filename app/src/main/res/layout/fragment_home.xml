<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.main.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/profile_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="0dp"
                android:orientation="vertical">

                <com.dauma.grokimkartu.ui.viewelements.CardViewElement
                    android:id="@+id/players_card_view_element"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:card_title="@string/home_players"
                    app:card_description="@string/home_players_description"
                    app:card_start_color="?attr/card_1_start_color"
                    app:card_end_color="?attr/card_1_end_color" />

                <com.dauma.grokimkartu.ui.viewelements.CardViewElement
                    android:id="@+id/thomann_card_view_element"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:card_title="@string/home_thomanns"
                    app:card_description="@string/home_thomanns_description"
                    app:card_start_color="?attr/card_2_start_color"
                    app:card_end_color="?attr/card_2_end_color" />

            </LinearLayout>
        </ScrollView>

        <com.dauma.grokimkartu.ui.viewelements.HeaderViewElement
            android:id="@+id/home_header_view_element"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:show_bottom_border="false"
            app:show_icon="true"
            app:header_type="standart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>