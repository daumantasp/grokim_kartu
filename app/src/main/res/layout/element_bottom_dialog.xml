<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomDialogRootRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/bottomDialogBackgroundFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bottomDialogBackgroundColor" />

    <LinearLayout
        android:id="@+id/dialogContentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="350dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_dialog_content_background">

        <TextView
            android:id="@+id/titleTextView"
            style="@style/BottomDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:title="Title" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="@drawable/bottom_dialog_value_container_background">

            <EditText
                android:id="@+id/valueEditText"
                style="@style/BottomDialogValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>

            <DatePicker
                android:id="@+id/datePicker"
                android:theme="@style/DatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/codeValueLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/DialogTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/codeValueTextInputEditText"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:hint="@string/bottom_dialog_search"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/codeValueRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/valueLimitTextView"
            style="@style/BottomDialogValue"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:visibility="gone"/>

        <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:type="primary"
            app:text="@string/bottom_dialog_save_button" />
    </LinearLayout>
</RelativeLayout>