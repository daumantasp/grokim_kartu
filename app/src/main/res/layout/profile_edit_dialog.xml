<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileEditDialogLinearLayout"
    android:layout_width="match_parent"
    android:minHeight="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/profile_edit_dialog_background">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:title="Title" />

    <TextView
        android:id="@+id/editValueTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        tools:title="Value" />

    <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:type="primary"
        app:text="@string/profile_edit_dialog_save_button" />

    <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:type="secondary"
        app:text="@string/profile_edit_dialog_cancel_button" />

</LinearLayout>