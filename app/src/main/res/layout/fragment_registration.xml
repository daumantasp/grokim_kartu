<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.authentication.RegistrationViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/registrationLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.authentication.RegistrationFragment">

        <ImageButton
            android:id="@+id/closeImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="@{() -> model.backClicked()}"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/registrationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:fontFamily="@font/lato"
            android:text="@string/registration_registrationTextView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameDescriptionTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_name_description"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:layout_marginBottom="10dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameTextInput"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.name}"
                        android:hint="@string/registration_name"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextInput"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.email}"
                        android:hint="@string/registration_email"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/passwordDescriptionTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="@string/registration_password_description" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordTextInput"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.password}"
                        android:hint="@string/registration_password"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordRepeatTextInput"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordRepeatTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.passwordRepeat}"
                        android:hint="@string/registration_password_repeat"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:enabled="@{model.registrationForm.valid}"
                    android:onClick="@{() -> model.registrationForm.onClick()}"
                    android:text="@string/registration_registerButton"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"/>

                <TextView
                    android:id="@+id/registrationSuccessfulTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="50dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:text="@string/registration_registrationSuccessful"
                    android:fontFamily="@font/lato"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/okButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> model.okClicked()}"
                    android:visibility="gone"
                    android:text="@string/registration_okButton"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"/>

                <TextView
                    android:id="@+id/resendTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/registration_resendButton"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:onClick="@{() -> model.resendClicked()}"
                    android:enabled="false"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>