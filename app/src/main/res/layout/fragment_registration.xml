<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.authentication.RegistrationViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/auth_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/registrationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.authentication.RegistrationFragment">

            <LinearLayout
                android:id="@+id/header_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/close_image_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/left_arrow"
                    android:backgroundTint="?attr/auth_icon_color"
                    android:onClick="@{() -> model.backClicked()}" />

                <TextView
                    android:id="@+id/registration_text_view"
                    style="@style/auth_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="50dp"
                    android:textSize="32sp"
                    android:layout_gravity="center"
                    android:text="@string/registration_registration_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inputs_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/header_linear_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/register_button"
                android:visibility="visible">

                <TextView
                    android:id="@+id/name_description_text_view"
                    style="@style/auth_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_name_description"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_text_input"
                    style="@style/auth_text_input"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.name}"
                        android:hint="@string/registration_name"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_text_input"
                    style="@style/auth_text_input"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.email}"
                        android:hint="@string/registration_email"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/password_description_text_view"
                    style="@style/auth_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="@string/registration_password_description" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_text_input"
                    style="@style/auth_text_input"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.password}"
                        android:hint="@string/registration_password"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_repeat_text_input"
                    style="@style/auth_text_input"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_repeat_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@={model.registrationForm.passwordRepeat}"
                        android:hint="@string/registration_password_repeat"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:fontFamily="@font/lato"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:enabled="@{model.registrationForm.valid}"
                app:onClick="@{() -> model.registrationForm.onClick()}"
                app:text="@string/registration_register_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

            <!--            Success-->
            <TextView
                android:id="@+id/registration_successful_text_view"
                style="@style/auth_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/registration_registration_successful"
                android:textAlignment="center"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@id/registration_success_linear_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_linear_layout" />

            <LinearLayout
                android:id="@+id/registration_success_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                    android:id="@+id/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:type="auth_primary"
                    app:onClick="@{() -> model.okClicked()}"
                    app:text="@string/registration_ok_button" />

<!--                <TextView-->
<!--                    android:id="@+id/resendTextView"-->
<!--                    style="@style/Text"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:enabled="false"-->
<!--                    android:onClick="@{() -> model.resendClicked()}"-->
<!--                    android:paddingTop="10dp"-->
<!--                    android:paddingBottom="10dp"-->
<!--                    android:text="@string/registration_resendButton" />-->
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>