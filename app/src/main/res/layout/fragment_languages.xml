<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.main.LanguagesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="0dp"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.dauma.grokimkartu.ui.viewelements.LanguageViewElement
                android:id="@+id/lt_language_view_element"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:language_code="lt"
                app:language_is_selected="true" />

            <com.dauma.grokimkartu.ui.viewelements.LanguageViewElement
                android:id="@+id/en_language_view_element"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:language_code="en"
                app:language_is_selected="false" />

        </LinearLayout>

        <com.dauma.grokimkartu.ui.viewelements.HeaderViewElement
            android:id="@+id/languages_header_view_element"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:title="@string/languages_title"
            app:show_bottom_border="true"
            app:show_icon="false"
            app:header_type="with_back"
            app:header_text_size="small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>