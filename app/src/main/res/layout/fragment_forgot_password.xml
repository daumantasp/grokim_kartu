<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.authentication.ForgotPasswordViewModel" />
    </data>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.authentication.ForgotPasswordFragment"
        android:orientation="vertical">

        <TextView
            android:id="@+id/passwordResetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textSize="32sp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:text="@string/forgotPassword_resetDescription" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTextInput"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@={model.forgotPasswordForm.email}"
                android:hint="@string/forgotPassword_email"
                android:singleLine="true"
                android:maxLines="1"
                android:lines="1"
                android:fontFamily="@font/lato"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/forgotPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="96dp"
            android:text="@string/forgotPassword_reset"
            android:fontFamily="@font/lato"
            android:layout_gravity="center"
            android:enabled="@{model.forgotPasswordForm.emailValid}"
            android:onClick="@{() -> model.forgotPasswordForm.onClick()}"/>

        <TextView
            android:id="@+id/passwordResetEmailSentTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textSize="20sp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="@string/passwordReset_email_sent" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:layout_gravity="center"
            android:onClick="@{() -> model.okClicked()}"
            android:visibility="gone"
            android:text="@string/passwordReset_okButton" />

    </LinearLayout>

</layout>

