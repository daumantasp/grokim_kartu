<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.authentication.ForgotPasswordViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/auth_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/forgot_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/header_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread">

                <ImageButton
                    android:id="@+id/close_image_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/left_arrow"
                    android:backgroundTint="?attr/auth_icon_color"
                    android:onClick="@{() -> model.backClicked()}" />

                <TextView
                    android:id="@+id/password_reset_text_view"
                    style="@style/auth_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="50dp"
                    android:layout_weight="1.0"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/forgot_password_title"
                    android:textSize="28sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/forgot_password_guideline_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <TextView
                android:id="@+id/forgot_password_description_text_view"
                style="@style/auth_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/forgot_password_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forgot_password_guideline_1"
                app:layout_constraintBottom_toTopOf="@id/email_text_input"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_text_input"
                style="@style/auth_text_input"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forgot_password_description_text_view"
                app:layout_constraintBottom_toTopOf="@id/forgot_password_button">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/lato"
                    android:hint="@string/forgot_password_email"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@={model.forgotPasswordForm.email}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                android:id="@+id/forgot_password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_text_input"
                app:type="auth_primary"
                app:enabled="@{model.forgotPasswordForm.emailValid}"
                app:onClick="@{() -> model.forgotPasswordForm.onClick()}"
                app:text="@string/forgot_password_reset" />

            <LinearLayout
                android:id="@+id/forgot_password_reset_success_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forgot_password_guideline_1">

                <TextView
                    android:id="@+id/password_reset_email_sent_text_view"
                    style="@style/auth_title"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginBottom="50dp"
                    android:layout_gravity="center"
                    android:text="@string/forgot_password_email_sent" />

                <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                    android:id="@+id/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:onClick="@{() -> model.okClicked()}"
                    app:text="@string/forgot_password_ok_button" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

