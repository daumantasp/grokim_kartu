<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.authentication.PasswordChangeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.authentication.PasswordChangeFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:fontFamily="@font/lato"
            android:text="@string/passwordChange_title"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/oldPasswordTextInput"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/oldPasswordInputEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@={model.passwordChangeForm().oldPassword}"
                android:hint="@string/passwordChange_oldPassword"
                android:singleLine="true"
                android:maxLines="1"
                android:lines="1"
                android:inputType="textPassword"
                android:fontFamily="@font/lato"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/newPasswordTextInput"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newPasswordInputEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@={model.passwordChangeForm().newPassword}"
                android:hint="@string/passwordChange_newPassword"
                android:singleLine="true"
                android:maxLines="1"
                android:lines="1"
                android:inputType="textPassword"
                android:fontFamily="@font/lato"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repeatPasswordTextInput"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repeatPasswordInputEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@={model.passwordChangeForm().repeatPassword}"
                android:hint="@string/passwordChange_repeatPassword"
                android:singleLine="true"
                android:maxLines="1"
                android:lines="1"
                android:fontFamily="@font/lato"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="96dp"
            android:text="@string/passwordChange_changeButton"
            android:enabled="@{model.passwordChangeForm().valid}"
            android:onClick="@{() -> model.passwordChangeForm().onClick()}"
            android:fontFamily="@font/lato"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/passwordChangedSuccessfullyTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/lato"
            android:visibility="gone"
            android:text="@string/passwordChange_passwordChangedSuccessfully" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passwordReset_okButton"
            android:visibility="gone"
            android:onClick="@{() -> model.okClicked()}"
            android:layout_gravity="center"
            android:fontFamily="@font/lato"/>

    </LinearLayout>

</layout>
