<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.main.PasswordChangeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="60dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/inputs_and_button_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/old_password_text_input"
                        style="@style/main_text_input"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/old_password_input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@={model.passwordChangeForm().oldPassword}"
                            android:hint="@string/password_change_old_password"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:lines="1"
                            android:inputType="textPassword"
                            android:fontFamily="@font/lato"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_password_text_input"
                        style="@style/main_text_input"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_password_input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@={model.passwordChangeForm().newPassword}"
                            android:hint="@string/password_change_new_password"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:lines="1"
                            android:inputType="textPassword"
                            android:fontFamily="@font/lato"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/repeat_password_text_input"
                        style="@style/main_text_input"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/repeat_password_input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@={model.passwordChangeForm().repeatPassword}"
                            android:hint="@string/password_change_repeat_password"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:lines="1"
                            android:fontFamily="@font/lato"
                            android:inputType="textPassword"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                        android:id="@+id/change_password_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        app:enabled="@{model.passwordChangeForm().valid}"
                        app:onClick="@{() -> model.passwordChangeForm().onClick()}"
                        app:text="@string/password_change_change_button"
                        app:type="primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/password_change_successful_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/change_password_header_view_element"
                    app:layout_constraintVertical_bias="0.2">

                    <TextView
                        android:id="@+id/password_changed_successfully_text_view"
                        style="@style/main_text"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_marginBottom="50dp"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="@string/password_change_password_changed_successfully" />

                    <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                        android:id="@+id/ok_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:text="@string/password_change_ok_button"
                        app:onClick="@{() -> model.okClicked()}"
                        app:type="primary"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.dauma.grokimkartu.ui.viewelements.HeaderViewElement
            android:id="@+id/change_password_header_view_element"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:title="@string/password_change_title"
            app:show_bottom_border="true"
            app:show_icon="false"
            app:header_type="with_back"
            app:header_text_size="small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
