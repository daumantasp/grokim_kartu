<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.dauma.grokimkartu.viewmodels.main.PasswordChangeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="60dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/inputsAndButtonLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/oldPasswordTextInput"
                        style="@style/SecondaryTextInput"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/oldPasswordInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@={model.passwordChangeForm().oldPassword}"
                            android:hint="@string/passwordChange_oldPassword"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:lines="1"
                            android:inputType="textPassword"
                            android:fontFamily="@font/lato"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/newPasswordTextInput"
                        style="@style/SecondaryTextInput"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/newPasswordInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@={model.passwordChangeForm().newPassword}"
                            android:hint="@string/passwordChange_newPassword"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:lines="1"
                            android:inputType="textPassword"
                            android:fontFamily="@font/lato"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/repeatPasswordTextInput"
                        style="@style/SecondaryTextInput"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/repeatPasswordInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@={model.passwordChangeForm().repeatPassword}"
                            android:hint="@string/passwordChange_repeatPassword"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:lines="1"
                            android:fontFamily="@font/lato"
                            android:inputType="textPassword"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                        android:id="@+id/changePasswordButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        app:enabled="@{model.passwordChangeForm().valid}"
                        app:onClick="@{() -> model.passwordChangeForm().onClick()}"
                        app:text="@string/passwordChange_changeButton"
                        app:type="primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/passwordChangeSuccessfulLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/changePasswordHeaderViewElement"
                    app:layout_constraintVertical_bias="0.2">

                    <TextView
                        android:id="@+id/passwordChangedSuccessfullyTextView"
                        style="@style/TextThirdly"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_marginBottom="50dp"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="@string/passwordChange_passwordChangedSuccessfully" />

                    <com.dauma.grokimkartu.ui.viewelements.ButtonViewElement
                        android:id="@+id/okButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:text="@string/passwordChange_okButton"
                        app:onClick="@{() -> model.okClicked()}"
                        app:type="primary"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.dauma.grokimkartu.ui.viewelements.HeaderViewElement
            android:id="@+id/changePasswordHeaderViewElement"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:title="@string/passwordChange_title"
            app:showBottomBorder="true"
            app:showIcon="false"
            app:headerType="withBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
